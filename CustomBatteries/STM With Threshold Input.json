{
	"Version": 2,
	"Name": "STM With Threshold Input",
	"BatteryStages": [
		{
			"Type": "Input",
			"Name": "Threshold Input",
			"Instructions": "Enter the STM detection thresholds listed below.",
			"Inputs": [
				{
					"Label": "Left STM Threshold",
					"Type": 1,
					"Key": "leftSTMThreshold"
				},
				{
					"Label": "Right STM Threshold",
					"Type": 1,
					"Key": "rightSTMThreshold"
				}
			]
		},
		{
			"Type": "Modifier",
			"Name": "Generate Presentation Levels",
			"Modifiers": [
				{
					"Type": "KeyValue",
					"InputKey": "leftSTMThreshold",
					"Value": 30,
					"Operation": "Plus",
					"OutputKey": "leftSTMPresentationLevel"
				},
				{
					"Type": "KeyValue",
					"InputKey": "rightSTMThreshold",
					"Value": 30,
					"Operation": "Plus",
					"OutputKey": "rightSTMPresentationLevel"
				}
			]
		},
		{
			"Type": "Instruction",
			"Header": "STM Instructions",
			"Instructions": [
				{
					"Type": "Text",
					"Text": "Welcome to the Spectrotemporal Modulation Sensitivity task.\n\nHere, we are going to measure your ability to detect small but specific changes among a group of sounds.\n\nOnce we being, there will be four targets on the screen. One at a time, each target will light up and a sound will play.  One of the middle two targets will sound just a bit different than all of the others.  Your task is to identify which middle target played a sound that was different.  Let's start with just your left ear."
				}
			]
		},
		{
			"Name": "STM Sensitivity (Left)",
			"Type": "Assessment"
		},
		{
			"Type": "Instruction",
			"Header": "STM Instructions Right",
			"Instructions": [
				{
					"Type": "Text",
					"Text": "Well done, you're almost finished.\n\nWe will now repeat the last test for your Right ear."
				}
			]
		},
		{
			"Name": "STM Sensitivity (Right)",
			"Type": "Assessment"
		},
		{
			"Type": "Report",
			"Header": "Results",
			"Text": "Here are your results.",
			"Reports": [
				{
					"Label": "Left STM Detection Threshold",
					"Type": 1,
					"Key": "leftSTMThreshold"
				},
				{
					"Label": "Right STM Detection Threshold",
					"Type": 1,
					"Key": "rightSTMThreshold"
				},
				{
					"Label": "Left STM Modulation Depth Threshold",
					"Type": 1,
					"Key": "leftSTMModDepthThreshold"
				},
				{
					"Label": "Right STM Modulation Depth Threshold",
					"Type": 1,
					"Key": "rightSTMModDepthThreshold"
				}
			]
		}
	]
}